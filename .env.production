# Maritime Trading Signals - Production Configuration
# Copy this to .env and fill in your actual API keys

# =============================================================================
# MARITIME DATA API - Datalastic ($49/month)
# =============================================================================
DATALASTIC_API_KEY=your_datalastic_api_key_here

# =============================================================================  
# MARKET DATA API - 12Data ($29/month)
# =============================================================================
TWELVEDATA_API_KEY=your_twelvedata_api_key_here

# =============================================================================
# EMAIL ALERTS - SendGrid ($15/month)
# =============================================================================
EMAIL_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=alerts@yourdomain.com
EMAIL_TO=your@email.com

# =============================================================================
# SMS ALERTS - Twilio (~$20/month)
# =============================================================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token  
TWILIO_FROM_NUMBER=+1234567890
TWILIO_TO_NUMBER=+1987654321

# =============================================================================
# DISCORD ALERTS - Free
# =============================================================================
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
ACCOUNT_BALANCE=100000
RISK_PER_TRADE=0.01
MAX_DAILY_TRADES=15
MIN_SIGNAL_CONFIDENCE=0.65

# =============================================================================
# SYSTEM SETTINGS
# =============================================================================
UPDATE_INTERVAL_MINUTES=5
MOCK_MODE=false